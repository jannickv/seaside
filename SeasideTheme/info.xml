<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<name>SeasideTheme</name>
	<version>1.0.0</version>
	<requirements>
		<minimum_version>3.0.0</minimum_version>
	</requirements>
	<thumbnail>thumbnail.png</thumbnail>
	<description>
		<![CDATA[
			Seaside is a minimal responsive theme.
		]]>
	</description>
	<authors>
		<author>
			<name>Jannick Vandaele</name>
			<url>http://jannickvandaele.be</url>
		</author>
	</authors>
	<metanavigation supported="false" />
	<templates>
		<template label="Default" path="core/layout/templates/default.tpl">
			<positions>
				<position name="main" />
				<position name="sidebar" />
			</positions>
			<format>
				[main,main,main,sidebar]
			</format>
		</template>
		<template label="Home" path="core/layout/templates/home.tpl">
			<positions>
				<position name="topleft" />
				<position name="main" />
			</positions>
			<format>
				[ topleft , topleft , / , / ],
				[main,main,main,main]
			</format>
		</template>
	</templates>
</theme>